<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_poster_favorite"
        app:riv_corner_radius="6dp"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_launcher_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorAccentDark"
            android:textStyle="bold"
            android:textSize="14sp"
            tools:text="Title"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tv_release_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            tools:text="24 January 2020"
            android:maxLines="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rate"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                android:contentDescription="@string/rate" />
            <TextView
                android:id="@+id/tv_rate_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="4.3"
                android:layout_toEndOf="@id/rate"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/lang"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_language"
                android:contentDescription="@string/lang" />
            <TextView
                android:id="@+id/tv_lang_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="en"
                android:layout_toEndOf="@id/lang"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>